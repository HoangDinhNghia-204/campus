# ------------------------------------------------------------------------------
# DRUPAL & COMPOSER VENDOR DIRECTORIES
# ------------------------------------------------------------------------------
# Ignore files and directories generated by Composer.
/vendor/
/drush/contrib/

# Ignore Drupal core, contrib modules, themes, and profiles.
# We will manage these with Composer.
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web-root/

# Ignore third-party libraries.
/web/libraries/

# ------------------------------------------------------------------------------
# PUBLIC FILES
# ------------------------------------------------------------------------------
# Ignore files generated by Drupal in the public files directory.
/web/sites/default/files/

# Ignore test sites.
/web/sites/simpletest/
/web/sites/braintree-test/

# Ignore settings.php and services.yml. It is recommended to manage these
# outside of version control. Use example files instead.
/web/sites/default/settings.php
/web/sites/default/services.yml

# ------------------------------------------------------------------------------
# DEVELOPMENT & SYSTEM FILES
# ------------------------------------------------------------------------------
# Ignore node_modules, bower_components, and other build artifacts.
node_modules/
bower_components/
/web/themes/custom/**/node_modules/
/web/themes/custom/**/bower_components/
/web/modules/custom/**/node_modules/
/web/modules/custom/**/bower_components/

# Ignore IDE and OS generated files.
.DS_Store
.idea/
.vscode/

# Ignore Simpletest test output.
*.verbose.html
.phpunit.result.cache

# Ignore compiled CSS files from Sass/Less.
# Let the build process handle this.
/web/themes/custom/**/*.css
/web/themes/custom/**/*.css.map
